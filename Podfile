workspace 'FlickrApp'
use_frameworks!

def shared_pods
# Reactive Functional Library
    pod 'ReactiveCocoa', '~> 6.0' # Binding & reactive extension for Cocoa Controls (Dependency - Reactive Swift)

# Networking Library
    pod 'Alamofire', '~> 4.5'   # Networking Library (Dependency - Result)
    pod 'Moya/ReactiveSwift'    # Network Abstraction Layer (Dependency - Reactive Swift)
    pod 'ReachabilitySwift'     # Network Reachability Check
    pod 'Moya-ObjectMapper/ReactiveSwift' # Networking - JSON Mapping
    
# Image Caching Library
    pod 'AlamofireImage'
end

target 'FlickrApp' do
    shared_pods
end
